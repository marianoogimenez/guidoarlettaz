<section class="py-20 lg:py-28 bg-mint">
  <div class="max-w-7xl mx-auto px-4 sm:px-6">
    <div class="grid lg:grid-cols-2 gap-12 items-start">
      <!-- Info -->
      <div>
        <p class="text-teal-primary font-semibold text-sm uppercase tracking-wider mb-3">Ubicación</p>
        <h2 class="font-serif text-3xl sm:text-4xl font-bold text-slate-900 mb-8">
          Visitanos en CABA
        </h2>
        <div class="space-y-6">
          <div class="flex gap-4">
            <div class="w-12 h-12 rounded-xl bg-teal-primary/10 flex items-center justify-center text-teal-primary shrink-0">
              <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
            </div>
            <div>
              <p class="font-semibold text-slate-800">Dirección</p>
              <p class="text-slate-600">Av. Corrientes 1234, Piso 3</p>
              <p class="text-slate-600">CABA, Argentina</p>
            </div>
          </div>
          <div class="flex gap-4">
            <div class="w-12 h-12 rounded-xl bg-teal-primary/10 flex items-center justify-center text-teal-primary shrink-0">
              <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <div>
              <p class="font-semibold text-slate-800">Horarios de Atención</p>
              <table class="text-sm text-slate-600 mt-1">
                <tbody>
                  <tr><td class="pr-4 py-0.5">Lunes a Viernes</td><td>9:00 — 19:00</td></tr>
                  <tr><td class="pr-4 py-0.5">Sábados</td><td>9:00 — 13:00</td></tr>
                  <tr><td class="pr-4 py-0.5 text-slate-400">Domingos</td><td class="text-slate-400">Cerrado</td></tr>
                </tbody>
              </table>
            </div>
          </div>
          <div class="flex gap-4">
            <div class="w-12 h-12 rounded-xl bg-teal-primary/10 flex items-center justify-center text-teal-primary shrink-0">
              <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4" />
              </svg>
            </div>
            <div>
              <p class="font-semibold text-slate-800">Acceso</p>
              <p class="text-slate-600">Subte línea B — Estación Carlos Pellegrini</p>
              <p class="text-slate-600">Estacionamiento en el edificio</p>
            </div>
          </div>
        </div>
        <a
          href="https://maps.google.com/?q=Av.+Corrientes+1234+CABA+Argentina"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 mt-8 bg-teal-primary hover:bg-teal-dark text-white font-semibold px-6 py-3 rounded-full transition-colors"
        >
          <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
            <path stroke-linecap="round" stroke-linejoin="round" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
          Cómo llegar
        </a>
      </div>
      <!-- Map placeholder -->
      <div class="rounded-2xl overflow-hidden border border-slate-200 bg-white aspect-square lg:aspect-[4/3] flex items-center justify-center">
        <div class="text-center p-8">
          <div class="w-20 h-20 bg-teal-primary/10 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-10 h-10 text-teal-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9 6.75V15m6-6v8.25m.503 3.498l4.875-2.437c.381-.19.622-.58.622-1.006V4.82c0-.836-.88-1.38-1.628-1.006l-3.869 1.934c-.317.159-.69.159-1.006 0L9.503 3.252a1.125 1.125 0 00-1.006 0L3.622 5.689C3.24 5.88 3 6.27 3 6.695V19.18c0 .836.88 1.38 1.628 1.006l3.869-1.934c.317-.159.69-.159 1.006 0l4.994 2.497c.317.158.69.158 1.006 0z" />
            </svg>
          </div>
          <p class="text-slate-500 font-medium mb-2">Mapa Interactivo</p>
          <p class="text-slate-400 text-sm mb-4">Av. Corrientes 1234, Piso 3, CABA</p>
          <a
            href="https://maps.google.com/?q=Av.+Corrientes+1234+CABA+Argentina"
            target="_blank"
            rel="noopener noreferrer"
            class="text-teal-primary hover:text-teal-dark font-medium text-sm transition-colors"
          >
            Abrir en Google Maps →
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

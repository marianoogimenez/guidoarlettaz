---
// TrustBar.astro — Teal background bar with 4 differentiators
import { Clock, Monitor, Award, GraduationCap } from 'lucide-astro';
---

<section class="bg-teal-primary text-white py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 grid grid-cols-2 lg:grid-cols-4 gap-8">
    <div class="text-center">
      <div class="mb-2 flex justify-center">
        <Clock class="w-8 h-8 text-white" />
      </div>
      <div class="text-base sm:text-lg font-semibold">Turnos sin apuro</div>
      <div class="text-teal-100 text-sm mt-1">El tiempo que tu caso necesita</div>
    </div>
    <div class="text-center">
      <div class="mb-2 flex justify-center">
        <Monitor class="w-8 h-8 text-white" />
      </div>
      <div class="text-base sm:text-lg font-semibold">Tecnología digital</div>
      <div class="text-teal-100 text-sm mt-1">Diagnóstico preciso al instante</div>
    </div>
    <div class="text-center">
      <div class="mb-2 flex justify-center">
        <Award class="w-8 h-8 text-white" />
      </div>
      <div class="text-base sm:text-lg font-semibold">Primeras marcas</div>
      <div class="text-teal-100 text-sm mt-1">Materiales de calidad comprobada</div>
    </div>
    <div class="text-center">
      <div class="mb-2 flex justify-center">
        <GraduationCap class="w-8 h-8 text-white" />
      </div>
      <div class="text-base sm:text-lg font-semibold">Odontólogo UBA</div>
      <div class="text-teal-100 text-sm mt-1">Matrícula profesional 4521</div>
    </div>
  </div>
</section>

          </g>

          <!-- Shine highlight on crown -->
          <ellipse cx="225" cy="165" rx="16" ry="30" class="fill-white/40" transform="rotate(-12 225 165)" />

          <!-- Sparkle top-right -->
          <g transform="translate(375, 120)">
            <line x1="0" y1="-16" x2="0" y2="16" stroke="#C75A0D" stroke-width="2.5" stroke-linecap="round" />

          <!-- Curved smile line -->
          <path d="M160 300 Q210 340 260 310 Q310 280 360 310" stroke="#0B7A70" stroke-width="1.5" stroke-linecap="round" fill="none" opacity="0.2" />
        </svg>
      </div>
    </div>
  </div>
</section>

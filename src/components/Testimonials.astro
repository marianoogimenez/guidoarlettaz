    animation: fadeSlideUp 0.6s ease-out forwards;
  }

  .animate-in [data-animate-child="1"] { animation-delay: 0s; }
  .animate-in [data-animate-child="2"] { animation-delay: 0.12s; }
  .animate-in [data-animate-child="3"] { animation-delay: 0.24s; }

  [data-animate="featured"].animate-in,
  [data-animate="carousel"].animate-in,
  [data-animate="cta"].animate-in {
    animation: fadeSlideUp 0.7s ease-out forwards;
  }

  [data-animate="featured"].animate-in { animation-delay: 0.3s; }
  [data-animate="carousel"].animate-in { animation-delay: 0.45s; }
  [data-animate="cta"].animate-in { animation-delay: 0.6s; }

  @keyframes fadeSlideUp {
    from {
      opacity: 0;
      transform: translateY(1.5rem);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Card hover transition refinement */
  .testimonial-card > div {
    transition: transform 0.4s cubic-bezier(0.22, 1, 0.36, 1),
                box-shadow 0.4s cubic-bezier(0.22, 1, 0.36, 1),
                border-color 0.3s ease;
  }

  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .testimonials-track {
      animation: none;
    }
    .animate-in [data-animate-child],
    [data-animate="featured"].animate-in,
    [data-animate="carousel"].animate-in,
    [data-animate="cta"].animate-in {
      animation: none;
      opacity: 1;
      transform: none;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {

    // --- Scroll-triggered entrance animations ---
    const animateTargets = document.querySelectorAll('[data-animate]');

    if (animateTargets.length > 0) {
      const observer = new IntersectionObserver(
        (entries) => {
          entries.forEach((entry) => {
            if (entry.isIntersecting) {
              entry.target.classList.add('animate-in');
              observer.unobserve(entry.target);
            }
          });
        },
        { threshold: 0.15, rootMargin: '0px 0px -40px 0px' }
      );

      animateTargets.forEach((el) => observer.observe(el));
    }

    // --- Drag/swipe support for carousel ---
    const carousel = document.querySelector('[data-carousel]');
    const track = document.querySelector('[data-carousel-track]');

    if (carousel && track) {
      let isDragging = false;
      let startX = 0;
      let scrollLeft = 0;
      let dragVelocity = 0;
      let lastDragX = 0;
      let rafId = null;

      // Get current transform translateX value
      function getCurrentTranslate() {
        const style = window.getComputedStyle(track);
        const matrix = new DOMMatrix(style.transform);
        return matrix.m41;
      }

      function onPointerDown(e) {
        // Only respond to primary button / single touch
        if (e.pointerType === 'mouse' && e.button !== 0) return;

        isDragging = true;
        track.classList.add('is-dragging');
        startX = e.clientX;
        scrollLeft = getCurrentTranslate();
        dragVelocity = 0;
        lastDragX = e.clientX;

        // Pause CSS animation and control transform directly
        track.style.animation = 'none';
        track.style.transform = `translateX(${scrollLeft}px)`;

        carousel.setPointerCapture(e.pointerId);
        e.preventDefault();
      }

      function onPointerMove(e) {
        if (!isDragging) return;

        const x = e.clientX;
        const dx = x - startX;
        dragVelocity = x - lastDragX;
        lastDragX = x;

        let newTranslate = scrollLeft + dx;

        // Get half-width (since cards are duplicated, half is the full set width)
        const halfWidth = track.scrollWidth / 2;

        // Wrap around for infinite feel
        if (newTranslate > 0) {
          newTranslate -= halfWidth;
          scrollLeft -= halfWidth;
          startX = x - (newTranslate - scrollLeft);
        } else if (newTranslate < -halfWidth) {
          newTranslate += halfWidth;
          scrollLeft += halfWidth;
          startX = x - (newTranslate - scrollLeft);
        }

        track.style.transform = `translateX(${newTranslate}px)`;
      }

      function onPointerUp(e) {
        if (!isDragging) return;
        isDragging = false;
        track.classList.remove('is-dragging');

        carousel.releasePointerCapture(e.pointerId);

        // Resume CSS animation from current position
        resumeAnimation();
      }

      function resumeAnimation() {
        const currentX = getCurrentTranslate();
        const halfWidth = track.scrollWidth / 2;

        // Normalize position to be within [-halfWidth, 0]
        let normalizedX = currentX % halfWidth;
        if (normalizedX > 0) normalizedX -= halfWidth;

        // Calculate what percentage of the animation we are at
        const progress = Math.abs(normalizedX) / halfWidth;

        // Remove inline styles and restart animation from the right offset
        track.style.transform = '';
        track.style.animation = '';

        // Adjust animation delay to resume from where we left off
        const totalDuration = 40; // matches the animation duration in seconds
        const offset = progress * totalDuration;

        track.style.animationDelay = `-${offset}s`;
      }

      carousel.addEventListener('pointerdown', onPointerDown);
      carousel.addEventListener('pointermove', onPointerMove);
      carousel.addEventListener('pointerup', onPointerUp);
      carousel.addEventListener('pointercancel', onPointerUp);

      // Prevent default drag behavior on images/links inside
      carousel.addEventListener('dragstart', (e) => e.preventDefault());

      // Also prevent click if we were dragging
      carousel.addEventListener('click', (e) => {
        if (Math.abs(dragVelocity) > 2) {
          e.preventDefault();
          e.stopPropagation();
        }
      }, true);
    }
  });
</script>
